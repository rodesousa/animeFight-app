<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Destiny !"
            android:textSize="40dp"
            android:layout_marginTop="20dp"
            android:textColor="#ff3333"
            android:id="@+id/textView" android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>

    <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:background="@android:color/transparent"
            android:id="@+id/button2" android:layout_alignTop="@+id/linearLayout"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent" android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
            android:layout_marginTop="107dp" android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView" android:id="@+id/linearLayout">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SURPRISE"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:id="@+id/textView2"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SURPRISE"
                android:textSize="20dp"
                android:id="@+id/textView3"/>
    </LinearLayout>

    <Button
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:id="@+id/button3" android:layout_alignTop="@+id/linearLayout"
            android:layout_alignLeft="@+id/linearLayout2" android:layout_alignStart="@+id/linearLayout2"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView" android:layout_toEndOf="@+id/textView"
            android:layout_alignTop="@+id/linearLayout" android:id="@+id/linearLayout2">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SURPRISE"
                android:layout_marginBottom="20dp"
                android:textSize="20dp"
                android:id="@+id/textView4"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="SURPRISE"
                android:textSize="20dp"
                android:id="@+id/textView5"/>
    </LinearLayout>
</RelativeLayout>